{
  "manifest_version": 3,
  "name": "북악번역확장프로그램",
  "version": "1.0",
  "description": "웹페이지의 영어 텍스트를 한국어로 자동으로 번역합니다.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup/selectPopup.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon48.png",
        "icons/close.png",
        "popup/selectPopup.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "options_page": "options/options.html"
}
